@model string

@{
    // Determine the icon class based on the message content
    var isSuccess = Model.Contains("success", StringComparison.OrdinalIgnoreCase);
    var iconClass = isSuccess ? "bx bx-check-circle text-success" : "bx bx-error text-danger";
    var cardClass = isSuccess ? "border-success" : "border-danger";
}

<div class="card @cardClass" style="width: 18rem; margin: 20px auto;">
    <div class="card-body text-center">
        <i class="@iconClass" style="font-size: 3rem;"></i>
        <p class="card-text mt-3">@Model</p>
    </div>
</div>
