@{
    ViewBag.Title = "Activate Account";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Activate Account</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Activate", "UserProfile", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label for="activationKey">Activation Key</label>
                            <input type="text" id="activationKey" name="activationKey" class="form-control" required />
                        </div>
                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-primary">Activate</button>
                        </div>
                    }
                </div>
                <div class="card-footer text-center">
                    @Html.ValidationMessage(string.Empty, new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
</div>
