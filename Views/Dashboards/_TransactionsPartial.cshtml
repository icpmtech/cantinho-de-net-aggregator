@model List<TransactionDto>

<ul class="p-0 m-0">
    @if (Model == null || !Model.Any())
    {
        <li class="d-flex mb-4 pb-1">
            <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                <div class="me-2">
                    <small class="text-muted d-block mb-1">No Transactions Available</small>
                </div>
            </div>
        </li>
    }
    else
    {
        @foreach (var transaction in Model)
        {
            <li class="d-flex mb-4 pb-1">
                <div class="avatar flex-shrink-0 me-3">
                    <img src="@transaction.Icon" alt="Transaction Icon" class="rounded">
                </div>
                <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                    <div class="me-2">
                        <small class="text-muted d-block mb-1">@transaction.Type</small>
                        <h6 class="mb-0">@transaction.Description</h6>
                    </div>
                    <div class="user-progress d-flex align-items-center gap-1">
                        <h6 class="mb-0">@transaction.Amount.ToString("N2")</h6> <span class="text-muted">@transaction.Currency</span>
                    </div>
                </div>
            </li>
        }
    }
</ul>
