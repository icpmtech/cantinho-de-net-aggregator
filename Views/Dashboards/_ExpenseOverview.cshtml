@model DashboardViewModel
<div class="col-md-6 col-lg-4 order-1 mb-4">
    <div class="card h-100">
        <div class="card-header">
            <ul class="nav nav-pills" role="tablist">
                <li class="nav-item">
                    <button type="button" class="nav-link " role="tab" data-bs-toggle="tab" data-bs-target="#navs-tabs-line-card-events" aria-controls="navs-tabs-line-card-events" aria-selected="true">Stock Events</button>
                </li>
                <li class="nav-item">
                    <button type="button" class="nav-link active" role="tab" data-bs-toggle="tab" data-bs-target="#navs-tabs-line-card-dividends" aria-controls="navs-tabs-line-card-dividends" aria-selected="false">Dividends</button>
                </li>
                <li class="nav-item">
                    <button type="button" class="nav-link" role="tab" data-bs-toggle="tab" data-bs-target="#navs-tabs-line-card-profit" aria-controls="navs-tabs-line-card-profit" aria-selected="false">Profit</button>
                </li>
            </ul>
        </div>
        <div class="card-body px-0">
            <div class="tab-content p-0">
                <div class="tab-pane fade" id="navs-tabs-line-card-events" role="tabpanel">
                    <div class="d-flex p-4 pt-3">
                        <div class="avatar flex-shrink-0 me-3">
                            <img src="~/img/icons/unicons/wallet.png" alt="User">
                        </div>
                        <div>
                            <small class="text-muted d-block">Events</small>
                            <div class="d-flex align-items-center">
                                <h6 class="mb-0 me-1">@Model.DashboardData.TotalEvents </h6>
                               
                                    <small class="text-success fw-medium">
                                        <i class='bx bx-chevron-up'></i>
                                        @Model.DashboardData.TotalEventsPositivePercentage%
                                    </small>
                               
                                    <small class="text-danger fw-medium">
                                        <i class='bx bx-chevron-down'></i>
                                        @Model.DashboardData.TotalEventsNegativePercentage%
                                    </small>
                            </div>
                        </div>
                    </div>
                    <div id="incomeChart"></div>
                    <div class="d-flex justify-content-center pt-4 gap-2">
                        <div class="flex-shrink-0">
                            <div id="expensesOfWeek"></div>
                        </div>
                        <div>
                            <p class="mb-n1 mt-1">Week summary</p>
                            <small class="text-muted">@Model.DashboardData.WeekPercentage this week</small>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade show active" id="navs-tabs-line-card-dividends" role="tabpanel">
                    <div class="d-flex p-4 pt-3">
                        <div class="avatar flex-shrink-0 me-3">
                            <img src="~/img/icons/unicons/wallet.png" alt="User">
                        </div>
                        <div>
                            <small class="text-muted d-block">Total Dividends</small>
                            <div class="d-flex align-items-center">
                                <h6 class="mb-0 me-1">@Model.DashboardData.Dividends</h6>
                                @if (Model.DashboardData.ProfitPercentage >= 0)
                                {
                                    <small class="text-success fw-medium">
                                        <i class='bx bx-chevron-up'></i>
                                        @Model.DashboardData.ProfitPercentage%
                                    </small>
                                }else
                                {
                                    <small class="text-danger fw-medium">
                                        <i class='bx bx-chevron-down'></i>
                                        @Model.DashboardData.ProfitPercentage%
                                    </small>
                                }

                            </div>
                        </div>
                    </div>
                    <div id="dividendsChart"></div>
                    <div class="d-flex justify-content-center pt-4 gap-2">
                        <div class="flex-shrink-0">
                            <div id="dividendsOfWeek"></div>
                        </div>
                        <div>
                            <p class="mb-n1 mt-1">Week summary</p>
                            <small class="text-muted">@Model.DashboardData.WeekPercentage this week</small>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="navs-tabs-line-card-profit" role="tabpanel">
                    <div class="d-flex p-4 pt-3">
                        <div class="avatar flex-shrink-0 me-3">
                            <img src="~/img/icons/unicons/wallet.png" alt="User">
                        </div>
                        <div>
                            <small class="text-muted d-block">Total Profit</small>
                            <div class="d-flex align-items-center">
                                <h6 class="mb-0 me-1"> @Model.DashboardData.Profit</h6>
                                @if (Model.DashboardData.ProfitPercentage >= 0)
                                {
                                    <small class="text-success fw-medium">
                                        <i class='bx bx-chevron-up'></i>
                                        @Model.DashboardData.ProfitPercentage%
                                    </small>
                                }
                                else
                                {
                                    <small class="text-danger fw-medium">
                                        <i class='bx bx-chevron-down'></i>
                                        @Model.DashboardData.ProfitPercentage%
                                    </small>
                                }
                            </div>
                        </div>
                    </div>
                    <div id="profitChart"></div>
                    <div class="d-flex justify-content-center pt-4 gap-2">
                        <div class="flex-shrink-0">
                            <div id="profitOfWeek"></div>
                        </div>
                        <div>
                            <p class="mb-n1 mt-1">Week summary</p>
                            <small class="text-muted">@Model.DashboardData.WeekPercentage this week</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
