<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RSS Links</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1>RSS Links</h1>
        <div id="rss-links" class="row"></div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            fetch('/api/rsslinks')
                .then(response => response.json())
                .then(data => {
                    const container = document.getElementById('rss-links');
                    data.forEach(link => {
                        const card = document.createElement('div');
                        card.className = 'col-md-4';
                        card.innerHTML = `
                            <div class="card mb-4">
                                <div class="card-body">
                                    <h5 class="card-title">${link.category}</h5>
                                    <p class="card-text">${link.url}</p>
                                    <a href="${link.url}" class="btn btn-primary" target="_blank">Visit</a>
                                </div>
                            </div>
                        `;
                        container.appendChild(card);
                    });
                });
        });
    </script>
</body>
</html>
