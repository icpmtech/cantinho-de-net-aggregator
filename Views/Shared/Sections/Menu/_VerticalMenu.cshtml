                    <a asp-controller="RSSLinks" asp-action="Index" class="menu-link">
                        <div>Rss Setup</div>
                    </a>
                </li>
               
                <li class='menu-item@(currentPage == "/Symbols/Index" ? " active" : "")'>
                    <a asp-controller="Symbols" asp-action="Index" class="menu-link">
                        <div>My Symbols</div>
                    </a>
                </li>
            </ul>
        </li>

        <!-- Admin Area -->
        @if (User.IsInRole("Admin"))
        {
            <li class='menu-item@(currentPage.StartsWith("/Admin") ? " active open" : "")' )'>
                <a href="javascript:void(0);" class="menu-link menu-toggle">
                    <i class="menu-icon tf-icons bx bx bx-archive"></i>
                    <div>Admin Area</div>
                </a>
                <ul class="menu-sub">

                    <li class='menu-item@(currentPage == "/Admin/Users/Index" ? " active" : "")'>
                        <a href="/Admin/Users/Index" class="menu-link">
