                <div>Sectors</div>
            </a>
            <ul class="menu-sub">

                <li class='menu-item@(currentPage == "/Sectors/Index" ? " active" : "")'>
                    <a asp-controller="Sectors" asp-action="Index" class="menu-link">
                        <div>List</div>
                    </a>
                </li>
                <li class='menu-item@(currentPage == "/Sectors/Create" ? " active" : "")'>
                    <a asp-controller="Sectors" asp-action="Create" class="menu-link">
                        <div>Sectors</div>
                    </a>
                </li>
            </ul>
        </li>
        <li class='menu-item@(currentPage.StartsWith("/Companies") ? " active open" : "")' )'>
            <a href="javascript:void(0);" class="menu-link menu-toggle">
                <i class="menu-icon tf-icons bx bx bx-archive"></i>
                <div>Companies</div>
            </a>
            <ul class="menu-sub">

                <li class='menu-item@(currentPage == "/Companies/Index" ? " active" : "")'>
                    <a asp-controller="Companies" asp-action="Index" class="menu-link">
