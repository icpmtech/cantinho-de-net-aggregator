@{
    TempData.Keep();
    string? currentPage = ViewContext.HttpContext.Request.Path;
}

<!-- Menu -->
@* ! Do this simple *@
<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">

    @* ! Hide app brand if navbar-full *@
    <div class='app-brand demo @((@ViewData["navbarFull"] != null && Convert.ToBoolean(@ViewData["navbarFull"])) ? "d-xl-none" : "")'>
        <a asp-controller="Dashboards" asp-action="Index" class="app-brand-link">
            <span class="app-brand-logo demo">
                @await Html.PartialAsync("../_Partials/_Macros")
            </span>
            <span class="app-brand-text demo menu-text fw-bold ms-2">@TempData.Peek("appName")</span>
        </a>

        <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto">
            <i class="bx bx-chevron-left bx-sm d-flex align-items-center justify-content-center"></i>
        </a>
    </div>

    <div class="menu-inner-shadow"></div>

    @* ! Full version menu-items *@
    <ul class="menu-inner py-1">
        <!-- Dashboards -->
        <li class='menu-item@(currentPage.EndsWith("/") || currentPage.StartsWith("/Dashboards/") ? " active open" : "")'>
            <a href="javascript:void(0);" class="menu-link menu-toggle">
                <i class="menu-icon tf-icons bx bx-home-circle"></i>
                <div>Indicators</div>
                <div class="badge bg-danger rounded-pill ms-auto">1</div>
            </a>
            <ul class="menu-sub">
                <li class='menu-item@(currentPage == "/Dashboards/Index" ? " active" : "")'>
                    <a asp-controller="Dashboards" asp-action="Index" class="menu-link">
                        <div>Analytics</div>
                    </a>

                </li>

            </ul>
        </li>
        <!-- Portfolio -->
        <li class='menu-item@(currentPage.StartsWith("/Portfolio") || currentPage.StartsWith("/StockEvents") ? " active open" : "")'>
            <a href="javascript:void(0);" class="menu-link menu-toggle">
                <i class="menu-icon tf-icons bx bx bx-archive"></i>
                <div>Portfolio</div>
            </a>

            <ul class="menu-sub">
                <li class='menu-item@(currentPage == "/Portfolio/Index" ? " active" : "")'>
                    <a asp-controller="Portfolio" asp-action="Index" class="menu-link">
                        <div>Overview</div>
                    </a>
                </li>
                <li class='menu-item@(currentPage == "/PortfolioItems/Index" ? " active" : "")'>
                    <a asp-controller="PortfolioItems" asp-action="Index" class="menu-link">
                        <div>Transactions</div>
                    </a>
                </li>
                <li class='menu-item@(currentPage == "/Portfolio/Dividends" ? " active" : "")'>
                    <a asp-controller="Portfolio" asp-action="Dividends" class="menu-link">
                        <div>Dividends</div>
                    </a>
                </li>
                <li class='menu-item@(currentPage == "/Portfolio/DividendsCalendar" ? " active" : "")'>
                    <a asp-controller="Portfolio" asp-action="DividendsCalendar" class="menu-link">
                        <div>Dividends Calendar</div>
                    </a>
                </li>
                <li class='menu-item@(currentPage == "/StockEvents/Index" ? " active" : "")'>
                    <a asp-controller="StockEvents" asp-action="Index" class="menu-link">
                        <div>Events</div>
                    </a>
                </li>
                <li class='menu-item@(currentPage == "/Portfolio/Fundamentals" ? " active" : "")'>
