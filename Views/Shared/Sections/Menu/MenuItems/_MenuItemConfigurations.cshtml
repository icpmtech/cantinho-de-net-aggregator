@{
    TempData.Keep();
    string? currentPage = ViewContext.HttpContext.Request.Path;
}
<li class="menu-header small text-uppercase">
    <span class="menu-header-text">Configuration</span>
</li>
<li class='menu-item@(currentPage == "/Configurations/News" ? " active" : "")'>
    <a href="javascript:void(0);" class="menu-link menu-toggle">
        <i class="menu-icon tf-icons bx bx bx-archive"></i>
        <div>Sources</div>
    </a>
    <ul class="menu-sub">

        <li class='menu-item@(currentPage == "/Configurations/News" ? " active" : "")'>
            <a asp-controller="Configurations" asp-action="News" class="menu-link">
                <div>News</div>
            </a>
        </li>

        <li class='menu-item@(currentPage == "/RSSLinks/Index" ? " active" : "")'>
            <a asp-controller="RSSLinks" asp-action="Index" class="menu-link">
                <div>Rss Setup</div>
            </a>
        </li>

        <li class='menu-item@(currentPage == "/Symbols/Index" ? " active" : "")'>
            <a asp-controller="Symbols" asp-action="Index" class="menu-link">
                <div>My Symbols</div>
            </a>
        </li>
    </ul>
</li>
