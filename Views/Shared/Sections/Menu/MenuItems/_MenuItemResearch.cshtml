@{
    TempData.Keep();
    string? currentPage = ViewContext.HttpContext.Request.Path;
}
<li class="menu-header small text-uppercase">
    <span class="menu-header-text">Research</span>
</li>
<li class='menu-item@(currentPage.StartsWith("/Sources") ? " active open" : "")'>
    <a href="javascript:void(0);" class="menu-link menu-toggle">
        <i class="menu-icon tf-icons bx bx-archive"></i>
        <div>Sources</div>
    </a>

    <ul class="menu-sub">

        <li class='menu-item@(currentPage == "/Sources/News" ? " active" : "")'>
            <a asp-controller="Sources" asp-action="News" class="menu-link">
                <div>News</div>
            </a>
        </li>
    </ul>
</li>
<li class='menu-item@(currentPage.StartsWith("/APilot") ? " active open" : "")'>
    <a href="javascript:void(0);" class="menu-link menu-toggle">
        <i class="menu-icon tf-icons bx bx-cube-alt"></i>
        <div>Vizualize</div>
    </a>

    <ul class="menu-sub">
        <li class='menu-item@(currentPage == "/APilot/News" ? " active" : "")'>
            <a asp-controller="APilot" asp-action="News" class="menu-link">
                <div>News</div>
            </a>
        </li>
        <li class='menu-item@(currentPage == "/NewsRSS/Index" ? " active" : "")'>
            <a asp-controller="NewsRSS" asp-action="Index" class="menu-link">
                <div>Rss Search</div>
            </a>
        </li>

    </ul>
</li>

<li class='menu-item@(currentPage.StartsWith("/SentimentAnalizer") ? " active open" : "")'>
    <a href="javascript:void(0);" class="menu-link menu-toggle">
        <i class="menu-icon tf-icons bx bx-cube-alt"></i>
