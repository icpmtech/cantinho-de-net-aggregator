@{
    TempData.Keep();
    string? currentPage = ViewContext.HttpContext.Request.Path;
}
@if (User.IsInRole("Admin"))
{
    <li class='menu-item@(currentPage.StartsWith("/Admin") ? " active open" : "")' )'>
        <a href="javascript:void(0);" class="menu-link menu-toggle">
            <i class="menu-icon tf-icons bx bx bx-archive"></i>
            <div>Admin Area</div>
        </a>
        <ul class="menu-sub">

            <li class='menu-item@(currentPage == "/Admin/Users/Index" ? " active" : "")'>
                <a href="/Admin/Users/Index" class="menu-link">
                    <div>Users</div>
                </a>
            </li>
            <li class='menu-item@(currentPage == "/Admin/UserRoles/Index" ? " active" : "")'>
                <a href="/Admin/UserRoles/Index" class="menu-link">
