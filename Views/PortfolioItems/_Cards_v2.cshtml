@model PaginatedList<PortfolioItem>
@using MarketAnalyticHub.Models.Portfolio.Entities
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="card mb-6">
    <div class="card-widget-separator-wrapper">
        <div class="card-body card-widget-separator">
            <div class="row gy-4 gy-sm-1">
                <div class="col-sm-6 col-lg-3">
                    <div class="d-flex justify-content-between align-items-start card-widget-1 border-end pb-4 pb-sm-0">
                        <div>
                            <p class="mb-1">@Localizer["Investment Cust"]</p>
                            <h4 id="totalCustMarketValue" class="mb-1"></h4>
                            <p class="mb-0"><span class="me-2">5k orders</span><span class="badge bg-label-success">+5.7%</span></p>
                        </div>
                        <span class="avatar me-sm-6">
                            <span class="avatar-initial rounded w-px-44 h-px-44">
                                <img src="~/img/icons/unicons/wallet-info.png" alt="Credit Card" class="rounded" style="width: 40px; height: 40px;">
                            </span>
                        </span>
                    </div>
                    <hr class="d-none d-sm-block d-lg-none me-6">
                </div>
                <div class="col-sm-6 col-lg-3">
                    <div class="d-flex justify-content-between align-items-start card-widget-2 border-end pb-4 pb-sm-0">
                        <div>
                            <p class="mb-1">@Localizer["Current Market Value"]</p>
                            <h4 class="mb-1">$674,347.12</h4>
                            <p class="mb-0"><span class="me-2">21k orders</span><span class="badge bg-label-success">+12.4%</span></p>
                        </div>
                        <span class="avatar p-2 me-lg-6">
                            <span class="avatar-initial rounded w-px-44 h-px-44">
                                <i class="bx bx-laptop bx-lg text-heading"></i>
                            </span>
                        </span>
                    </div>
                    <hr class="d-none d-sm-block d-lg-none">
                </div>
                <div class="col-sm-6 col-lg-3">
                    <div class="d-flex justify-content-between align-items-start border-end pb-4 pb-sm-0 card-widget-3">
                        <div>
                            <p class="mb-1">@Localizer["Total Portfolio Percentage"]</p>
                            <h4 class="mb-1">$14,235.12</h4>
                            <p class="mb-0">6k orders</p>
                        </div>
                        <span class="avatar p-2 me-sm-6">
                            <span class="avatar-initial rounded w-px-44 h-px-44">
                                <i class="bx bx-gift bx-lg text-heading"></i>
                            </span>
                        </span>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-3">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="mb-1">@Localizer["Dividends"]</p>
                            <h4 id="dividends" class="mb-1"></h4>
                            <p class="mb-0"><span id="totalDifferenceIcon" class="me-2"> @Localizer["Profit no Dividends"]</span><span id="totalDifferencePercentage" class="badge bg-label-danger">-3.5%</span></p>
                        </div>
                        <span class="avatar p-2">
                            <span class="avatar-initial rounded w-px-44 h-px-44">
                                <i class="bx bx-wallet bx-lg text-heading"></i>
                            </span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

