@model string
<div class="navbar-nav-right d-flex align-items-center" id="navbar-collapse">
    <!-- Search -->
    <div class="navbar-nav align-items-center">
        <form class="d-flex" method="get">
            <div class="nav-item d-flex align-items-center">
                <i class="bx bx-search fs-4 lh-0"></i>
                <input type="text" class="form-control border-0 shadow-none ps-1 ps-sm-2" name="searchQuery" value="@ViewBag.SearchQuery" placeholder="Search..." aria-label="Search...">
            </div>
        </form>
    </div>
    <!-- /Search -->
    <!-- Credit Bar -->
    
    <ul class="navbar-nav flex-row align-items-center ms-auto">
        <li class="nav-item credit-bar-container d-flex align-items-center me-3">
            <div class="credit-bar" id="creditBar" style="width: 50%;"></div>
            <span id="creditText" class="ms-2">Credits 2000</span>
        </li>
        <li class="nav-item lh-1 me-3" id="app-icon">
            <i class="bx bx-grid-alt"></i>
        </li>
        <li class="nav-item lh-1 me-3" id="notification-icon">
            <i class="bx bx-bell"></i>
            <span id="notification-badge" class="notification-badge" style="display:none;">0</span>
          @*   <span class="notification-dot"></span> *@
        </li>
        <li class="nav-item navbar-dropdown dropdown-user dropdown">
            <a class="nav-link dropdown-toggle hide-arrow" href="javascript:void(0);" data-bs-toggle="dropdown">
                <div class="avatar avatar-online">
                    <img src="@Model" alt class="w-px-40 h-auto rounded-circle">
                </div>
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
                <li>
                    <a class="dropdown-item" href="javascript:void(0);">
                        <div class="d-flex">
                            <div class="flex-shrink-0 me-3">
                                <div class="avatar avatar-online">
                                    <img src="@Model" alt class="w-px-40 h-auto rounded-circle">
                                </div>
                            </div>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="flex-grow-1">
                                    <span class="fw-medium d-block">@User.Identity.Name</span>
                                    <small class="text-muted">Admin</small>
                                </div>
                            }
                            else
                            {
                                <div class="flex-grow-1">
                                    <span class="fw-medium d-block">Demo</span>
                                    <small class="text-muted">Admin</small>
                                </div>
                            }
                        </div>
                    </a>
                </li>
                <li><div class="dropdown-divider"></div></li>
                <li>
                    <a class="dropdown-item" href="/Pages/AccountSettings">
                        <i class="bx bx-user me-2"></i>
                        <span class="align-middle">My Profile</span>
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" href="javascript:void(0);">
                        <i class="bx bx-cog me-2"></i>
                        <span class="align-middle">Settings</span>
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" href="/UserProfiles">
                        <span class="d-flex align-items-center align-middle">
                            <i class="flex-shrink-0 bx bx-credit-card me-2"></i>
                            <span class="flex-grow-1 align-middle ms-1">Billing</span>
                            <span class="flex-shrink-0 badge badge-center rounded-pill bg-danger w-px-20 h-px-20">4</span>
                        </span>
                    </a>
                </li>
                <li><div class="dropdown-divider"></div></li>
                <li>
                    <a class="dropdown-item" href="/Account/Logout">
                        <i class="bx bx-power-off me-2"></i>
                        <span class="align-middle">Log Out</span>
                    </a>
                </li>
            </ul>
        </li>
    </ul>
</div>
