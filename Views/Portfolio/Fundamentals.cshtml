<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        loadPortfolioStatistics();
    });

    async function loadPortfolioStatistics() {
        const response = await fetch('/GetPortfolioStatistics', {
            method: 'GET',
            headers: {
                'Content-Type': 'application/json'
            }
        });

        if (response.ok) {
            const statistics = await response.json();
            renderPortfolioStatistics(statistics);
        } else {
            alert('Failed to load portfolio statistics');
        }
    }

    function renderPortfolioStatistics(statistics) {
        document.getElementById('totalValue').innerText = `${statistics.totalValue.toFixed(2)} Total Value`;
        document.getElementById('totalSymbols').innerText = statistics.totalSymbols;

        const portfolioItemsList = document.getElementById('portfolioItemsList');
        portfolioItemsList.innerHTML = '';

        statistics.items.forEach(item => {
            const listItem = document.createElement('li');
            listItem.classList.add('d-flex', 'mb-4', 'pb-1');
            listItem.innerHTML = `
                    <div class="avatar flex-shrink-0 me-3">
                        <span class="avatar-initial rounded bg-label-primary"><i class='bx bx-bar-chart-alt-2'></i></span>
                    </div>
                    <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                        <div class="me-2">
                            <h6 class="mb-0">${item.category}</h6>
                            <small class="text-muted">${item.description}</small>
                        </div>
                        <div class="user-progress">
                            <small class="fw-medium">${item.value.toFixed(2)}</small>
                        </div>
                    </div>
                `;
            portfolioItemsList.appendChild(listItem);
        });

        renderChart(statistics.chartData);
    }

    function renderChart(chartData) {
        const ctx = document.getElementById('orderStatisticsChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: chartData.labels,
                datasets: [{
                    label: 'Value',
                    data: chartData.values,
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    }
</script>
