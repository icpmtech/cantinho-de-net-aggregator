@model MarketAnalyticHub.Models.PortfolioListViewModel

@{
    ViewBag.Title = "Fundamentals";
}

<h2>Fundamentals</h2>

@foreach (var portfolio in Model.Portfolios)
{
    <h3>@portfolio.Name</h3>
    <p><strong>Created On:</strong> @portfolio.CreationDate?.ToString("dd MMM yyyy")</p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Symbol</th>
                <th>Status</th>
                <th>Shares</th>
                <th>Last Price</th>
                <th>Average Cost / Share</th>
                <th>Total Cost</th>
                <th>Market Value</th>
                <th>Total Dividend Income</th>
                <th>Today's Gain (Unrealized)</th>
                <th>Total Gain (Unrealized)</th>
                <th>Total Return</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in portfolio.Items)
            {
                <tr>
                    <td>@item.Symbol</td>
                    <td>@item.Status</td>
                    <td>@item.Shares</td>
                    <td>@item.LastPrice</td>
                    <td>@item.AverageCost</td>
                    <td>@item.TotalInvestment</td>
                    <td>@item.CurrentMarketValue</td>
                    <td>@item.TotalDividendIncome</td>
                    <td>@item.TodaysGain</td>
                    <td>@item.TotalGain</td>
                    <td>@item.TotalReturn</td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <h4>Summary</h4>
        <p><strong>Total Investment:</strong> @portfolio.TotalInvestment</p>
        <p><strong>Current Market Value:</strong> @portfolio.CurrentMarketValue</p>
        <p><strong>Total Gains/Losses:</strong> @portfolio.TotalGainsLosses</p>
        <p><strong>Total Dividend Income:</strong> @portfolio.TotalDividendIncome</p>
    </div>
}
