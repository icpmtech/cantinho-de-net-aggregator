<!-- New Card for Week's Performance -->
<!-- Modern Card for Week's Performance -->
<div class="card shadow-lg border-0">
    <div class="card-body p-4">
        <!-- Card Title with Badge -->
        <h4 class="card-title text-center mb-4">
            Week's Performance
            <span class="badge bg-gradient-primary ms-2">Live</span>
        </h4>

        <div id="Week-performance" class="text-center">
            <!-- Total Amount Week with Badge -->
            <div class="mb-3">
                <strong>
                    <i class='bx bx-dollar-circle text-success'></i>
                    Total Amount:
                </strong>
                <span id="totalAmountWeek" class="fw-bold fs-5">0.00</span>
                <span class="badge bg-gradient-success ms-2">Updated</span>
            </div>

            <!-- Change in Market Value Week with Badge -->
            <div class="mb-3">
                <strong>
                    <i class='bx bx-line-chart text-warning'></i>
                    Change in Market Value:
                </strong>
                <span id="changeInMarketValueWeek" class="fw-bold fs-5">
                    <span id="marketValueAmountWeek">$0.00</span>
                    <i id="marketValueIconWeek" class='bx'></i>
                </span>
                <span class="badge bg-gradient-warning ms-2">Change</span>
            </div>

            <!-- Percent Change Week with Badge -->
            <div>
                <strong>
                    <i class='bx bx-pie-chart-alt-2 text-info'></i>
                    Percent Change:
                </strong>
                <span id="percentChangeWeek" class="fw-bold fs-5">
                    <span id="percentChangeAmountWeek">0.00</span>%
                    <i id="percentChangeIconWeek" class='bx'></i>
                </span>
                <span class="badge bg-gradient-info ms-2">Percentage</span>
            </div>
        </div>
    </div>
</div>




