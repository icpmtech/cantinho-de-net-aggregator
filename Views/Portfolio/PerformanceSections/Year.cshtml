<!-- Modern Card for Year's Performance -->
<div class="card shadow-lg border-0">
    <div class="card-body p-4">
        <!-- Card Title with Badge -->
        <h4 class="card-title text-center mb-4">
            Year's Performance
            <span class="badge bg-gradient-primary ms-2">Live</span>
        </h4>

        <div id="Year-performance" class="text-center">
            <!-- Total Amount Year with Badge -->
            <div class="mb-3">
                <strong>
                    <i class='bx bx-dollar-circle text-success'></i>
                    Total Amount:
                </strong>
                <span id="totalAmountYear" class="fw-bold fs-5">0.00</span>
                <span class="badge bg-gradient-success ms-2">Updated</span>
            </div>

            <!-- Change in Market Value Year with Badge -->
            <div class="mb-3">
                <strong>
                    <i class='bx bx-line-chart text-warning'></i>
                    Change in Market Value:
                </strong>
                <span id="changeInMarketValueYear" class="fw-bold fs-5">
                    <span id="marketValueAmountYear">$0.00</span>
                    <i id="marketValueIconYear" class='bx'></i>
                </span>
                <span class="badge bg-gradient-warning ms-2">Change</span>
            </div>

            <!-- Percent Change Year with Badge -->
            <div>
                <strong>
                    <i class='bx bx-pie-chart-alt-2 text-info'></i>
                    Percent Change:
                </strong>
                <span id="percentChangeYear" class="fw-bold fs-5">
                    <span id="percentChangeAmountYear">0.00</span>%
                    <i id="percentChangeIconYear" class='bx'></i>
                </span>
                <span class="badge bg-gradient-info ms-2">Percentage</span>
            </div>
        </div>
    </div>
</div>



