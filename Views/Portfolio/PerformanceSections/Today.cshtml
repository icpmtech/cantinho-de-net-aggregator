<!-- Modern Card for Today's Performance -->
<div class="card shadow-lg border-0">
    <div class="card-body p-4">
        <!-- Card Title with Badge -->
        <h4 class="card-title text-center mb-4">
            Today's Performance
            <span class="badge bg-gradient-primary ms-2">Live</span>
        </h4>

        <div id="today-performance" class="text-center">
            <!-- Total Amount Today with Badge -->
            <div class="mb-3">
                <strong>
                    <i class='bx bx-dollar-circle text-success'></i>
                    Total Amount:
                </strong>
                <span id="totalAmountToday" class="fw-bold fs-5">0.00</span>
                <span class="badge bg-gradient-success ms-2">Updated</span>
            </div>

            <!-- Change in Market Value Today with Badge -->
            <div class="mb-3">
                <strong>
                    <i class='bx bx-line-chart text-warning'></i>
                    Change in Market Value:
                </strong>
                <span id="changeInMarketValueToday" class="fw-bold fs-5">
                    <span id="marketValueAmount">$0.00</span>
                    <i id="marketValueIcon" class='bx'></i>
                </span>
                <span class="badge bg-gradient-warning ms-2">Change</span>
            </div>

            <!-- Percent Change Today with Badge -->
            <div>
                <strong>
                    <i class='bx bx-pie-chart-alt-2 text-info'></i>
                    Percent Change:
                </strong>
                <span id="percentChangeToday" class="fw-bold fs-5">
                    <span id="percentChangeAmount">0.00</span>%
                    <i id="percentChangeIcon" class='bx'></i>
                </span>
                <span class="badge bg-gradient-info ms-2">Percentage</span>
            </div>
        </div>
    </div>
</div>



<!-- Script to Update Icons and Colors Based on Values -->
<script>
    // Example data - replace these with your actual data sources
    const totalAmountToday = 0; // Example value
    const changeInMarketValueToday = 0; // Positive change
    const percentChangeToday = 0; // Negative change

    // Update Total Amount Today
    document.getElementById('totalAmountToday').textContent = totalAmountToday.toFixed(2);

    // Function to update change elements
    function updateChangeElement(amount, isPercent, amountElementId, iconElementId) {
        const amountElement = document.getElementById(amountElementId);
        const iconElement = document.getElementById(iconElementId);
        const parentElement = amountElement.parentElement;

        // Determine if the change is positive or negative
        const isPositive = amount >= 0;

        // Update the amount text
        amountElement.textContent = Math.abs(amount).toFixed(2);

        // Update the color based on positive or negative
        if (isPositive) {
            parentElement.classList.add('text-success');
            parentElement.classList.remove('text-danger');
            iconElement.classList.add('bx-up-arrow-alt', 'icon-positive');
            iconElement.classList.remove('bx-down-arrow-alt', 'icon-negative');
        } else {
            parentElement.classList.add('text-danger');
            parentElement.classList.remove('text-success');
            iconElement.classList.add('bx-down-arrow-alt', 'icon-negative');
            iconElement.classList.remove('bx-up-arrow-alt', 'icon-positive');
        }
    }

    // Update Change in Market Value Today
    updateChangeElement(changeInMarketValueToday, false, 'marketValueAmount', 'marketValueIcon');

    // Update Percent Change Today
    updateChangeElement(percentChangeToday, true, 'percentChangeAmount', 'percentChangeIcon');
</script>

