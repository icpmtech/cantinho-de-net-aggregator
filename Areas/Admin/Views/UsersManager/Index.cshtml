@model IEnumerable<MarketAnalyticHub.Areas.Admin.Models.UserViewModel>

@{
    ViewData["Title"] = "User Management";
    Layout = "~/Areas/Admin/Views/Shared/_ContentNavbarLayout.cshtml";
}

<h1>User Management</h1>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>
                    @foreach (var role in user.Roles)
                    {
                        <span class="badge bg-primary">@role</span>
                    }
                </td>
                <td>
                    <a class="btn btn-primary" href="@Url.Action("Edit", "UsersManager", new { area = "Admin", id = user.UserId })">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
