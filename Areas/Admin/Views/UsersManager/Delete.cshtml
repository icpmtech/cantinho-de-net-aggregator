@model MarketAnalyticHub.Areas.Admin.Models.DeleteUserViewModel
@{
    ViewData["Title"] = "Delete User";
    Layout = "~/Areas/Admin/Views/Shared/_ContentNavbarLayout.cshtml";
}

<h2>Delete User</h2>
<div>
    <h4>Are you sure you want to delete this user?</h4>
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.FirstName @Model.LastName</dd>

        <dt class="col-sm-2">Roles</dt>
        <dd class="col-sm-10">@string.Join(", ", Model.Roles)</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="UserId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
