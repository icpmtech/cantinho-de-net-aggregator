@model MarketAnalyticHub.Models.DividendsTracker

@{
    ViewData["Title"] = "Add Dividend";
}

<h1>Add Dividend</h1>

<form asp-action="AddDividend" method="post">
    <div class="form-group">
        <label asp-for="Company" class="control-label"></label>
        <input asp-for="Company" class="form-control" />
        <span asp-validation-for="Company" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Ticker" class="control-label"></label>
        <input asp-for="Ticker" class="form-control" />
        <span asp-validation-for="Ticker" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Country" class="control-label"></label>
        <input asp-for="Country" class="form-control" />
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Region" class="control-label"></label>
        <input asp-for="Region" class="form-control" />
        <span asp-validation-for="Region" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Exchange" class="control-label"></label>
        <input asp-for="Exchange" class="form-control" />
        <span asp-validation-for="Exchange" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SharePrice" class="control-label"></label>
        <input asp-for="SharePrice" class="form-control" />
        <span asp-validation-for="SharePrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PrevDividend" class="control-label"></label>
        <input asp-for="PrevDividend" class="form-control" />
        <span asp-validation-for="PrevDividend" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DividendIndices" class="control-label">Index</label>
        <select asp-for="DividendIndices" class="form-control" asp-items="ViewBag.IndexIds" multiple="multiple"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
