@model MarketAnalyticHub.Models.DividendsTracker

@{
    ViewData["Title"] = "Delete Dividend Tracker";
}

<h1>Delete Dividend Tracker</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>DividendsTracker</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Company
        </dt>
        <dd class="col-sm-10">
            @Model.Company
        </dd>
        <dt class="col-sm-2">
            Ticker
        </dt>
        <dd class="col-sm-10">
            @Model.Ticker
        </dd>
        <dt class="col-sm-2">
            Country
        </dt>
        <dd class="col-sm-10">
            @Model.Country
        </dd>
        <dt class="col-sm-2">
            Region
        </dt>
        <dd class="col-sm-10">
            @Model.Region
        </dd>
        <dt class="col-sm-2">
            Exchange
        </dt>
        <dd class="col-sm-10">
            @Model.Exchange
        </dd>
        <dt class="col-sm-2">
            Share Price
        </dt>
        <dd class="col-sm-10">
            @Model.SharePrice
        </dd>
        <dt class="col-sm-2">
            Prev Dividend
        </dt>
        <dd class="col-sm-10">
            @Model.PrevDividend
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
