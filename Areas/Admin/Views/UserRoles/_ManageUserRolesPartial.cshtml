@using AspnetCoreMvcFull.Areas.Admin.Models
@model List<ManageUserRolesViewModel>

<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Selected</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Model[i].RoleName</td>
                <td>
                    <input type="checkbox" name="roles" value="@Model[i].RoleName" @(Model[i].Selected ? "checked" : "") />
                    <input type="hidden" name="roles[@i].RoleId" value="@Model[i].RoleId" />
                    <input type="hidden" name="roles[@i].RoleName" value="@Model[i].RoleName" />
                </td>
            </tr>
        }
    </tbody>
</table>
